<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChiTietNhanVien">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#8ED87C"
        app:title="Chi tiết nhân viên"
        app:titleTextColor="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Ảnh đại diện"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSelectImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/a"
                    android:layout_alignParentRight="true"
                    android:text="Chỉnh sửa"
                    android:textColor="@color/teal_700" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSelectImg"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="75dp">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@color/black" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Ảnh CCCD"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSelectCCCD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/b"
                    android:layout_alignParentRight="true"
                    android:text="Chỉnh sửa"
                    android:textColor="@color/teal_700" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSelectCCCD"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="18dp">

                    <ImageView
                        android:id="@+id/imgCCCD"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cccd" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Ảnh XN không có TATS"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSelectTATS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/c"
                    android:layout_alignParentRight="true"
                    android:text="Chỉnh sửa"
                    android:textColor="@color/teal_700" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSelectTATS"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="18dp">

                    <ImageView
                        android:id="@+id/imgTATS"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ktats" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/as"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="Chi tiết"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtChiTiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/as"
                        android:layout_alignParentRight="true"
                        android:text="Chỉnh sửa"
                        android:textColor="@color/teal_700" />
                </RelativeLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hoTen"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_baseline_account_circle_24"
                    android:drawablePadding="15dp"
                    android:gravity="center|start"
                    android:text="Họ tên"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/diaChi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_baseline_place_24"
                    android:drawablePadding="15dp"

                    android:gravity="center|start"
                    android:text="Sống tại Hải Phòng"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/soDT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="15dp"

                    android:gravity="center|start"
                    android:text="Số điện thoại"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="15dp"

                    android:gravity="center|start"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/gioiTinh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_baseline_psychology_alt_24"
                    android:drawablePadding="15dp"

                    android:gravity="center|start"
                    android:text="Giới tính"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ngaySinh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_baseline_cake_24"
                    android:drawablePadding="15dp"
                    android:gravity="center|start"
                    android:text="Ngày sinh"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ngayBD"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/ic_baseline_event_available_24"
                    android:drawablePadding="15dp"
                    android:gravity="center|start"
                    android:text="Ngày bắt đầu làm"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>