<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:foreground="?selectableItemBackground"
    android:id="@+id/mRelativeLayout"
    android:background="#2F2EF837">

    <TextView
        android:id="@+id/ngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textColor="@color/black"
        android:text="Ngày 2022-18-11"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
        android:layout_below="@id/ngay"
        android:textColor="@color/black"
        android:text="Đã xác nhận trạng thái"
        android:layout_toLeftOf="@id/xacNhan"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/trangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_alignLeft="@id/ngay"
        android:text="Trạng thái:Xác nhận công"
        android:textColor="#1EA323" />
    <ImageView
        android:id="@+id/xacNhan"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_right"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>