<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.SanPham.FragmentSanPham">
<!--    <include-->
<!--        layout="@layout/toolbar_sanpham"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_tatca"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:background="@drawable/tieude"
            android:textColor="#0AEC13"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/txt_food"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Food"
            android:background="@drawable/tieude"
            android:textColor="#0AEC13"
            android:textSize="13dp"
            />
    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_sanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
     <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flbtn_sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
 
        android:layout_marginBottom="80dp"
        android:layout_marginRight="40dp"
         android:src="@drawable/ic_baseline_add_24"
        />
</FrameLayout>